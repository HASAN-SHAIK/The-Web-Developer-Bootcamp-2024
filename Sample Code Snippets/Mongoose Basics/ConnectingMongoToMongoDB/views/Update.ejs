<body>
    <form action="/farmStand/<%= product._id %>/update" method="post">
  
            <label name="name" id="name">Name</label>
            <input type="text" name="name" value=<%= product.name %>>
     
            <label name="price" price="price">Price</label>
            <input type="number" name="price" value = <%= product.price %>>
       
            <label>category</label>
             <select name="category" id="category">
                <% for (var cat of categories) { %>
                <option value="<%= cat %>" <%= cat === product.category?"selected": "" %> ><%=cat%></option>
                <% } %>
              </select>
          
    <button type="submit">Update</button>

    </form>
    <a href="/farmStand"><button>Back</button></a>
</body>
